.page-header
  %h1
    = t('users.registered_users')

- if @users.count > 0
  %table.table.table-bordered.table-condensed.table-striped
    %thead
      %th
        = t('users.user')
      %th
        = t('users.registration_date')
    %tbody
      - @users.each do |user|
        %tr
          %td
            = user.name
          %td
            = l(user.created_at.localtime, format: :long)
- else
  = t('users.no_users')
